rule split_and_filter_vcf:
    input:
        "data/calls/all-calls.vcf"
    output:
        # expand("data/calls/{chrom}-calls.vcf", chrom=["chr01", "chr02", "chr03"])
        "data/calls/{chrom}-calls.vcf",
        "data/calls/{chrom}-filtered-calls.vcf"
    shell: """
        grep "^#C\|{wildcards.chrom}" {input} > {output[0]}
        Rscript scripts/filter_chrom_vcf.R {output[0]}
    """